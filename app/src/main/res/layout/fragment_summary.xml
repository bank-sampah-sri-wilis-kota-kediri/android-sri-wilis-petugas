<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.summary.SummaryFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.summary.SummaryFragment">

        <View
            android:id="@+id/v_blue"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/rounded_summary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_halo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Halo"
            android:fontFamily="@font/inter_medium"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Petugas Bank Sampah"
            android:textColor="@color/white"
            android:textSize="23sp"
            app:layout_constraintStart_toStartOf="@id/tv_halo"
            app:layout_constraintTop_toBottomOf="@id/tv_halo" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.93"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingHorizontal="16dp"
            android:paddingBottom="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/rounded_summary_white"
            app:layout_constraintTop_toBottomOf="@id/v_blue"
            android:layout_marginTop="-80dp"
            android:elevation="8dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:text="Total Pengiriman"
                android:textSize="22sp"
                android:elevation="0dp"
                app:layout_constraintStart_toStartOf="@+id/cv_white"
                app:layout_constraintTop_toTopOf="@+id/cv_white" />

            <View
                android:id="@+id/v_jumlah"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginTop="16dp"
                app:layout_constraintWidth_percent="0.48"
                android:background="@drawable/rounded_summary_aliceblue"
                android:elevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <View
                android:id="@+id/v_jumlah_tag"
                android:layout_width="10dp"
                android:layout_height="110dp"
                android:background="@drawable/rounded_end_jumlah"
                android:elevation="0dp"
                app:layout_constraintEnd_toEndOf="@+id/v_jumlah"
                app:layout_constraintTop_toTopOf="@+id/v_jumlah" />


            <TextView
                android:id="@+id/tv_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Jumlah"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="@+id/v_jumlah"
                app:layout_constraintTop_toTopOf="@+id/v_jumlah" />


            <TextView
                android:id="@+id/tv_value_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="137"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/v_jumlah"
                app:layout_constraintStart_toStartOf="@+id/v_jumlah" />


            <View
                android:id="@+id/v_perlu_diantar"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_summary_aliceblue"
                android:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_jumlah"
                app:layout_constraintWidth_percent="0.48" />

            <View
                android:id="@+id/v_perlu_diantar_tag"
                android:layout_width="10dp"
                android:layout_height="110dp"
                android:background="@drawable/rounded_end_perlu"
                android:elevation="0dp"
                app:layout_constraintEnd_toEndOf="@+id/v_perlu_diantar"
                app:layout_constraintTop_toTopOf="@+id/v_perlu_diantar" />

            <TextView
                android:id="@+id/tv_perlu_diantar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Perlu diantar"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="@+id/v_perlu_diantar"
                app:layout_constraintTop_toTopOf="@+id/v_perlu_diantar" />


            <TextView
                android:id="@+id/tv_value_perlu_diantar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="37"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/v_perlu_diantar"
                app:layout_constraintStart_toStartOf="@+id/v_perlu_diantar" />


            <View
                android:id="@+id/v_terkonfirmasi"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_summary_aliceblue"
                android:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/v_jumlah"
                app:layout_constraintWidth_percent="0.48" />

            <TextView
                android:id="@+id/tv_terkonfirmasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_medium"
                android:text="Terkonfirmasi"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="@+id/v_terkonfirmasi"
                app:layout_constraintTop_toTopOf="@+id/v_terkonfirmasi" />


            <TextView
                android:id="@+id/tv_value_terkonfirmasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="100"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/v_terkonfirmasi"
                app:layout_constraintStart_toStartOf="@+id/v_terkonfirmasi" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cv_terkonfirmasi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_summary_white"
            android:elevation="8dp"
            android:paddingHorizontal="16dp"
            android:paddingBottom="28dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_white"
            app:layout_constraintWidth_percent="0.93">

            <TextView
                android:id="@+id/tv_total_terkonfirmasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="0dp"
                android:fontFamily="@font/inter_medium"
                android:text="Total terkonfirmasi"
                android:textSize="22sp"
                app:layout_constraintStart_toStartOf="@+id/cv_terkonfirmasi"
                app:layout_constraintTop_toTopOf="@+id/cv_terkonfirmasi" />


            <View
                android:id="@+id/v_selesai"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_summary_aliceblue"
                android:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_total_terkonfirmasi"
                app:layout_constraintWidth_percent="0.48" />

            <View
                android:id="@+id/v_selesai_tag"
                android:layout_width="10dp"
                android:layout_height="110dp"
                android:background="@drawable/rounded_end_selesai"
                android:elevation="0dp"
                app:layout_constraintEnd_toEndOf="@+id/v_selesai"
                app:layout_constraintTop_toTopOf="@+id/v_selesai" />

            <TextView
                android:id="@+id/tv_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:text="Selesai diantar"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/v_selesai"
                app:layout_constraintTop_toTopOf="@+id/v_selesai" />


            <TextView
                android:id="@+id/tv_value_selesai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/inter_bold"
                android:text="75"
                android:textColor="@color/black"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="@+id/v_selesai"
                app:layout_constraintStart_toStartOf="@+id/v_selesai" />


            <View
                android:id="@+id/v_gagal"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_summary_aliceblue"
                android:elevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_total_terkonfirmasi"
                app:layout_constraintWidth_percent="0.48" />


            <View
                android:id="@+id/v_gagal_tag"
                android:layout_width="10dp"
                android:layout_height="110dp"
                android:background="@drawable/rounded_end_gagal"
                android:elevation="0dp"
                app:layout_constraintEnd_toEndOf="@+id/v_gagal"
                app:layout_constraintTop_toTopOf="@+id/v_gagal" />

            <TextView
                android:id="@+id/tv_gagal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:text="Gagal"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/v_gagal"
                app:layout_constraintTop_toTopOf="@+id/v_gagal" />


            <TextView
                android:id="@+id/tv_value_gagal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="@font/inter_bold"
                android:text="15"
                android:textColor="@color/black"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="@+id/v_gagal"
                app:layout_constraintStart_toStartOf="@+id/v_gagal" />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>